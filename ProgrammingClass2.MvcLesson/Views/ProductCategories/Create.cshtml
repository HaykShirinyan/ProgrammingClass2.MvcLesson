@model CreateProductCategoryVm

<div>
  <form asp-controller="ProductCategories" asp-action="Create">
    <div class="form-group">
      <label asp-for="Product.Id">
        Product ID
      </label>
      <input asp-for="Product.Id" class="form-control" readonly="readonly" />
    </div>

    <div class="form-group">
      <label asp-for="Product.Name">
        Product Name
      </label>
      <input asp-for="Product.Name" class="form-control" readonly="readonly" />
    </div>

    <div class="form-group">
      <label asp-for="SelectedCategoryId">
        Category
      </label>
      <select asp-for="SelectedCategoryId" class="form-control">
        @foreach (var category in Model.Categories)
        { 
          <option value="@category.ID">
            @category.Name
          </option>
        }
      </select>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        Assign Category
      </button>
    </div>
  </form>
</div>