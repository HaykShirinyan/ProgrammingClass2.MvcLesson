@model List<Category> 

<div>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary mb-3" >
        Create New
    </a>

    <table class = "table">
        <thead>
            <tr>
                <th>
                    ID
                   </th>
                <th>
                    Name
                   </th>
                <th>
                    Descritption
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Id
                      </td>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.Description
                    </td>
                    <td>
                        <a asp-controller="Categories" asp-action="Edit" asp-route-Id="Id" class="btn btn-secondary">
                          Edit
                        </a>
                    </td>
                 </tr>
            }
          </tbody>
        </table>
    </div>