@model Category

<div>
    <dl>
    <dt>
       ID
     </dt>
        <dd>
      @Model.Id
      </dd>
        <dt>
       Name
      </dt>
        <dd>
            @Model.Name
      </dd>
        <dt>
            Description
        </dt>
        <dd>
        @Model.Description
        </dd>
   </dl>
    <p>
        Are you sure you want to delete this product?
      </p>

    <form asp-controller="Categories" asp-action="Delete" asp-rout-id="@Model.Id">
    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Yes
            </button>
        <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
            No
            </a>
     </div>
        </form>
</div>