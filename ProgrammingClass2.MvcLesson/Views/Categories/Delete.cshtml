@model Category

<div class="text-center mt-4">
  <dl class="jumbotron h4">
    <dt>
      ID
    </dt>
    <dd>
      @Model.Id
    </dd>

    <dt>
      Name
    </dt>
    <dd>
      @Model.Name
    </dd>

    <dt>
      Description
    </dt>
    <dd class="mb-5">
      @Model.Description
    </dd>
  </dl>

  <h4 class="text-center mb-3">
    Are you sure you want to delete this Category from the list?
  </h4>

  <form asp-controller="Categories" asp-action="Delete" asp-route-id="@Model.Id">
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        Yes
      </button>

      <a asp-controller="Categories"
         asp-action="Index"
         class="btn btn-secondary">
        No
      </a>
    </div>
  </form>  
</div>