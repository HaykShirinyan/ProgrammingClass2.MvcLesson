@model ProductVm

<div>
    <form asp-controller="Products" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Product.Id">
                ID
            </label>
            <input asp-for="Product.Id" class="form-control" readonly="readonly" />
        </div>

        <div class="form-group">
            <label asp-for="Product.Name">
                Name
            </label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Description">
                Description
            </label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.UnitOfMeasureId">
                Unit Of Measure
            </label>
            <select asp-for="Product.UnitOfMeasureId" class="form-control">
                <option value=""></option>

                @foreach (var uom in Model.UnitOfMeasures)
                {
                    <option value="@uom.Id">@uom.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Product.ProductTypeId">
                ProductType
            </label>
            <select asp-for="Product.ProductTypeId" class="form-control">
                <option value=""></option>

                @foreach (var pt in Model.ProductTypes)
                {
                    <option value="@pt.Id">@pt.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Product.CurrencyId">
                Currency
            </label>
            <select asp-for="Product.CurrencyId" class="form-control">
                <option value=""></option>

                @foreach (var currency in Model.Currencies)
                {
                    <option value="@currency.Id">@currency.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Product.Quantity">
                Quantity
            </label>
            <input asp-for="Product.Quantity" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Product.UnitPrice">
                Unit Price
            </label>
            <input asp-for="Product.UnitPrice" class="form-control" />
        </div>

        <div>
            <a asp-controller="ProductCategories"
               asp-action="Index"
               asp-route-productId="@Model.Product.Id">
                Categories
            </a>
        </div>

        <div>
            <a asp-controller="ProductColors"
               asp-action="Index"
               asp-route-productId="@Model.Product.Id">
                Colors
            </a>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                Update
            </button>
        </div>
    </form>
</div>