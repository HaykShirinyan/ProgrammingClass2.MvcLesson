@model Product

<div>
    <form asp-controller="Products" asp-action="Create">
        <div class="form-group">
            <label asp-for="Name">
                Name
            </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">
                Description
            </label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitOfMeasureId">
                Unit of Measure
            </label>
            <select asp-for="UnitOfMeasureId" class="form-control">
                <option value=""></option>

                @foreach (var uom in ViewBag.UnitOfMeasures as List<UnitOfMeasure>)
                {
                    <option value="@uom.Id">@uom.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="ProductTypeId">
                Product Type
            </label>
            <select asp-for="ProductTypeId" class="form-control">
                <option value=""></option>

                @foreach (var productType in ViewBag.ProductTypes as List<ProductType>)
                {
                    <option value="@productType.Id">@productType.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="CurrencyId">
                Currency
            </label>
            <select asp-for="CurrencyId" class="form-control">
                <option value=""></option>

                @foreach (var currency in ViewBag.Currencies as List<Currency>)
                {
                    <option value="@currency.Id">@currency.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Quantity">
                Quantity
            </label>
            <input asp-for="Quantity" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice">
                Unit Price
            </label>
            <input asp-for="UnitPrice" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                Create
            </button>
        </div>
    </form>
</div>