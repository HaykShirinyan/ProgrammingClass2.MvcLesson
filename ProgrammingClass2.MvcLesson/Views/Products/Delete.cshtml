@model Product

<div>
  @* DL nshanakum e dictionary list *@
  <dl>
    @* DT nshanakum e dictionary term *@
    <dt>
      ID
    </dt>
    @* DD nshanakum e dictionary data *@
    <dd>
      @Model.Id
    </dd>

    <dt>
      Name
    </dt>
    <dd>
      @Model.Name
    </dd>

    <dt>
      Description
    </dt>
    <dd>
      @Model.Description
    </dd>

    <dt>
        Unit of Measure
    </dt>
    <dd>
        @Model.UnitOfMeasure
    </dd>

    <dt>
        Product Type
    </dt>
    <dd>
        @Model.ProductType
    </dd>

    <dt>
      Quantity
    </dt>
    <dd>
      @Model.Quantity
    </dd>

    <dt>
        Currency
    </dt>
    <dd>
        @Model.Currency
    </dd>

    <dt>
      Unit Price
    </dt>
    <dd>
      @Model.UnitPrice
    </dd>

  <p>
    Are you sure you want to delete this product?
  </p>

  @* 
    Qani vor Yes kochake sexmelis menq piti kanchenq Delete action-e, mez aystex form e petq.
    Amen form ir action-e kanchelu hamar piti type="submit" button (kochak) unena.
    Mer Yes kochake submit tesaki e. Ayd patcharov el, erb Yes kochack sexmenq, form-e submit e anelu, vorn el kanchelu e mer Delete aciton-e.
  *@
  <form asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        Yes
      </button>

      <a asp-controller="Products"
         asp-action="Index"
         class="btn btn-secondary">
        No
      </a>
    </div>
  </form>  
</div>