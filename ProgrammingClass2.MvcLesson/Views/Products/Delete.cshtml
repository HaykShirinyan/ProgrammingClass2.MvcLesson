@model Product

<div>
  <dl>
    <dt>
      ID
    </dt>
    <dd>
      @Model.Id
    </dd>

    <dt>
      Name
    </dt>
    <dd>
      @Model.Name
    </dd>

    <dt>
      Description
    </dt>
    <dd>
      @Model.Description
    </dd>

    <dt>
      Unit Of Measure
    </dt>
    <dd>
      @Model.UnitOfMeasure
    </dd>

    <dt>
      Product Type
    </dt>
    <dd>
      @Model.ProductType
    </dd>

    <dt>
      Currency
    </dt>
    <dd>
      @Model.Currency
    </dd>

    <dt>
      Quantity
    </dt>
    <dd>
      @Model.Quantity
    </dd>

    <dt>
      Unit Price
    </dt>
    <dd>
      @Model.UnitPrice
    </dd>
  </dl>

  <p>
    Are you sure you want to delete this product?
  </p>

  <form asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        Yes
      </button>

      <a asp-controller="Products"
         asp-action="Index"
         class="btn btn-secondary">
        No
      </a>
    </div>
  </form>  
</div>