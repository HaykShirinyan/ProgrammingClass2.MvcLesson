@model List<ProductType>

<div>
    <a asp-controller="ProductTypes" 
       asp-action="Create"
       class="btn btn-primary mb-3">
        Create
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var productType in Model)
            {
                <tr>
                    <td>
                        @productType.Id
                    </td>
                    <td>
                        @productType.Name
                    </td>
                    <td>
                        @productType.Description
                    </td>
                    <td>
                        <a asp-controller="ProductTypes"
                           asp-action="Edit"
                           asp-route-id="@productType.Id"
                           class="btn btn-secondary">
                            Edit
                        </a>

                        <a asp-controller="ProductTypes"
                           asp-action="Delete"
                           asp-route-id="@productType.Id"
                           class="btn btn-secondary">
                            Delete                        
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>