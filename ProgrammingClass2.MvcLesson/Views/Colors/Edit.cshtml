@model ColorVm

<div>
  <form asp-controller="Colors" asp-action="Edit">
    <div class="form-group">
      <label asp-for="Color.Id">
        ID
      </label>
      <input asp-for="Color.Id" class="form-control" readonly="readonly" />
    </div>

    <div class="form-group">
      <label asp-for="Color.Name">
        Name
      </label>
      <input asp-for="Color.Name" class="form-control" />
      <span asp-validation-for="Color.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Color.Description">
        Description
      </label>
      <input asp-for="Color.Description" class="form-control" />
      <span asp-validation-for="Color.Description" class="text-danger"></span>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        Update
      </button>
    </div>
  </form>
</div>